#include <iostream>
#include <cstring>
using namespace std;
void encriptado_cesar(char mensaje[], int clave){
    clave = clave%26;
    int tam = strlen(mensaje);
    for(int i{0}; i < tam; i++){
        char letra= mensaje[i];
        if(letra >= 'A' && letra <= 'Z'){
            letra = ((letra - 'A' + clave)%26 + 'A');
        }
        cout << letra;
    }
    cout << endl;
}

void descrifrar_cesar(char mensaje[], int clave){
    clave = clave%26;
    int tam = strlen(mensaje);
    for(int i{0}; i < tam; i++){
        char letra= mensaje[i];
        if(letra >= 'A' && letra <= 'Z'){
            letra = ((letra - 'A' - clave + 26)%26 + 'A');
        }
        cout << letra;
    }
    cout << endl;
}
int main()
{
    char palabra[]= "HOLVAAA";
    int tam= strlen(palabra);
    cout << "palabra original:" << endl;
    for(int i{0}; i < tam; i++){
        cout << palabra[i];
    }
    cout << endl;
    cout << "Palabra encriptada:" << endl;
    encriptado_cesar(palabra, 7);
    char encriptada[]= "OVSCHHH";
    cout << "Palabra descrifrada: " << endl;
    descrifrar_cesar(encriptada,7);
    return 0;
}
