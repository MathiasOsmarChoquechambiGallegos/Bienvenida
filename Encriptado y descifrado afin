#include <iostream>
#include <cstring>
using namespace std;
void encriptado_afin(char mensaje[], int clave, int mult){
    clave = clave%26;
    int tam = strlen(mensaje);
    for( int i{0}; i < tam; i++){
        char letra= mensaje[i];
        if(mult%26 != 0){
            letra = (mult * letra + 'A' +clave)%26 + 'A';
        } else {
            cout << mult << " no es coprimo de 26";
            return;
        }
    cout << letra;
    }
    return;
}

int main()
{
    char palabra[]= "HOLVAAA";
    int tam= strlen(palabra);
    cout << "palabra original:" << endl;
    for(int i{0}; i < tam; i++){
        cout << palabra[i];
    }
    cout << endl;
    int sum;
    int mult;
    cout << "Elija los parametro: " << endl;
    cout << "Suma: ";
    cin >> sum;
    cout << "Multiplicacion: ";
    cin >> mult;
    cout << "Palabra encriptada:" << endl;
    encriptado_afin(palabra, sum, mult);

    return 0;
}
